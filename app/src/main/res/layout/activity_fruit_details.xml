<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        tools:context=".Screens.ActivitysContain.FruitDetails">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_height="260dp">
                <LinearLayout
                    android:id="@+id/rotatLayout"
                    android:layout_width="80dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_arrow_back"
                        android:backgroundTint="@color/white"
                        android:layout_height="50dp"
                        app:tint="@color/black" />
                    <Space
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/tvItemName"
                        android:layout_width="match_parent"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="My Text"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:rotation="-90"
                        android:layout_height="wrap_content"/>
                    <Space
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/itemColoView"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:background="@color/green"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgItem"
                            android:layout_width="match_parent"
                            android:src="@drawable/katna"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="Khatna"
                    android:id="@+id/tvItemName1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvPriceperQty"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/Tvkg"
                    android:layout_width="wrap_content"
                    android:text="$20"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/Tvkg"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:text="/Kg"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="1000"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/tvQty"
                    android:text=" /Kg"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/imbtnsub"
                    android:layout_toLeftOf="@id/imbtnadd"
                    android:layout_marginRight="14dp"
                    android:layout_width="40dp"
                    android:src="@drawable/substaction"
                    android:background="@color/green"
                    android:layout_height="40dp"
                    app:tint="@color/white" />
                <ImageButton
                    android:id="@+id/imbtnadd"
                    android:layout_marginRight="2dp"
                    android:layout_width="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_add"
                    android:background="@color/green"
                    android:layout_height="40dp"
                    app:tint="@color/white" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:text="Details"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:text="text Details..."
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/green"
            android:background="@drawable/raduis_all_costome"
            android:layout_marginBottom="8dp"
            android:padding="3dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_shopping"
                android:layout_height="40dp"
                app:tint="@color/grey20" />
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:text="Add To Basket"
                android:textColor="@color/grey20"
                android:textSize="22sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</layout>